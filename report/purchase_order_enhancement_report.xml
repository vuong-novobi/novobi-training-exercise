<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id='report_purchaseorder_inherit' inherit_id='purchase.report_purchaseorder_document'>
        <xpath expr="//div[@t-if='o.date_order']" position="after">
            <div name="payment_term" class="col-3 bm-2">
                <strong>Payment Term:</strong>
                <p t-field="o.payment_term_id" class="m-0"/>
            </div>
        </xpath>
    </template>

    <record id="view_payment_term_pivot" model="ir.ui.view">
        <field name="model">purchase.report</field>
        <field name="inherit_id" ref="purchase.view_purchase_order_search"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='group_date_approve_month']" position="after">
                <filter string="Payment Term" name="payment_term_id" context="{'group_by': 'payment_term_id'}"/>
            </xpath>
        </field>
    </record>
</odoo>